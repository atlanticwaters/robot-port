{
  "name": "robot-port",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "pnpm --filter @robot/web dev",
    "dev:all": "./dev.sh",
    "slices": "pnpm --filter @robot/web slicemachine",
    "build": "pnpm --filter @robot/web build",
    "lint": "pnpm --filter @robot/web lint",
    "typecheck": "pnpm --filter @robot/web typecheck",
    "test": "pnpm --filter @robot/web test",
    "format": "pnpm --filter @robot/web format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "astro-eslint-parser": "^1.0.3",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.33.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "eslint-plugin-testing-library": "^6.3.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "slice-machine-ui": "^2.17.0"
  },
  "lint-staged": {
    "*.{ts,tsx,astro,js,jsx}": [
      "pnpm --filter @robot/web lint -- --fix",
      "pnpm --filter @robot/web format -- --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
